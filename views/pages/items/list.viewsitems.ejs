<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Search & Filter
				<a href="<%= prefixadmin %>/item"">
					<span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
				</a>
			</div>

			<div class="panel-body">
				<div class="row">
					<div class="status-list col-sm-6 pl0">
						<% include ./../../helper/filter-status.helper.ejs %>
						<%- FilterStatusHelper(statusFiter, keyword) %>
					</div>
					<div class="col-sm-6">
						<form action="<%= prefixadmin %>/item/<%= currStatus %>" method="GET">
							<div class="input-group">
								<input type="text" class="form-control" name="search" placeholder="Search for..." value="<%= keyword %>">
								<span class="input-group-btn">
									<button class="btn btn-info" type="submit">Search</button>
								</span>
								<span class="input-group-btn">
									<button class="btn btn-success" type="button"><a href="<%= prefixadmin %>/item">Clear</a></button>
								</span>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				List Items
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
					<div class="zcontrols">
						<select name="action" class="form-control slbAction">
							<option value="">Bulk Action</option>
							<option value="admin/item/change-status/active">
								Active
							</option>
							<option value="admin/item/change-status/inactive">
								InActive
							</option>
							<option value="admin/item/save-ordering/">
								Change Ordering
							</option>
							<option value="admin/item/delete/">
								Delete
							</option>
						</select>
						<button class="btn btn-info btnAction" type="button" id="btn-action" value="btnAction"
							disabled>Apply</button>
						<div class="pull-right">
							<a href="/<%= prefixadmin %>/item/add" class="btn btn-warning btn-addNew">Add New
							</a>
						</div>
					</div>

					<div class="table-responsive">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>
										<input type="checkbox" class="cbAll" />
									</th>
									<th>#</th>
									<th>Name</th>
									<th>Status</th>
									<!-- <th width="30%">Content</th> -->
									<th>Ordering</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
							<% include ./../../helper/status.helper.ejs %>
							<% items.forEach((item, index)=>{ %>
								<% if(item){ %> 
									<tr>
										<td><input type="checkbox" name="cid" value="5a9e5a96da67bc078421d7d6" /></td>
										<td><%= index + 1 %></td>
										<td><%= item.username %></td>
										<td>
											<%- statusHelper(item.status, "#"); %>
										</td>
										<td><input type="number" value="<%= item.ordering %>" class="text-center ordering"></td>
										<td>
											<a href="#" type="button"
												class="btn btn-warning btn-sm">Edit</a>
											<a href="#" type="button"
												class="btn btn-danger btn-sm btn-delete">Delete</a>
										</td>
									</tr>
								 <% }else{ %>

								<% } %>
							<% }); %>
								
							</tbody>
						</table>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div class="col-lg-12">
		<% include ./../../helper/pagination.helper.ejs %>
		<%- pagination(paginations, "item" , currStatus, keyword) %>
	</div>
</div>