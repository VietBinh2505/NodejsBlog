<script id="template-message" type="x-tmpl-mustache">
    <div class="direct-chat-msg {{typeShow}}">
        <div class="direct-chat-info clearfix">
            <span class="direct-chat-name {{classUsername}}">{{data.username}}</span>
            <span class="direct-chat-timestamp {{classCreated}}">{{data.created}}</span>
        </div>
        <img class="direct-chat-img" src="{{userAvatar}}" alt="{{data.username}}">
        <div class="direct-chat-text">{{data.content}}</div>
    </div>
</script>

<script id="server_return_newMessage_error" type="x-tmpl-mustache">
    <div class="alert alert-danger alert-dismissible" id="area-notify">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <strong>Error: </strong>{{data.content}}
     </div>
</script>

<script id="template-user-typing" type="x-tmpl-mustache">
    <p class="show-typing">{{user}} đang chat ...</p>
</script>

