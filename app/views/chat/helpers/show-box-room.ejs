<%
    showBoxRoom = (roomInfo) => {
		  let xhtmlRoom = '';
        let lengthObj = roomInfo.length;

        for (let i = 0; i < lengthObj; i++) {
            let room        = roomInfo[i];
            let avatar   = 'upload/groups/' + roomInfo[i].avatar;
            let linkRoom    = systemConfig.prefixChat + `/room/` + room.id;

            xhtmlRoom += `<div class="room">
                            <div class="col-md-8 col-sm-8 col-xs-8 room-avatar">
                                <img class="rooms-list-img" src="${avatar}" alt="${room.username}">
                                <h5 class="room-name">${room.username}</h5>
                                <small >Member: 4</small>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <a href="${linkRoom}" type="button" class="btn btn-block btn-primary btn-w btn-sm">Tham gia</a>
                            </div>
                        </div>`;
        }

        return xhtmlRoom;
    }
%>