<% 
	folderUpload = "upload/article/";
	const linkPrefix = systemConfig.prefixBlog + "/article/"; //blog
%>
<% include ./../helper/format-date.ejs %>
<div class="col-lg-4">
	<div class="sidebars-area">
		<%if(typeof ArticleRandom !== "undefined"){ %>
			<div class="single-sidebar-widget most-popular-widget">
				<h6 class="title">Bài Viết Ngẫu Nhiên</h6>
				<% ArticleRandom.forEach((item, i)=>{ %>
					<div class="single-list flex-row d-flex">
						<div class="thumb">
							<img src="<%= folderUpload + item.avatar %>" alt="">
						</div>
						<div class="details">
							<a href="<%= linkPrefix + item._id %>"><h6><%= item.username %></h6>
							</a>
							<ul class="meta">
								<li><a href="#"><span class="lnr lnr-calendar-full"></span><%= formatdate(item.created.time) %></a>
								</li>
								<!-- <li><a href="#"><span class="lnr lnr-bubble"></span>06</a></li> -->
							</ul>
						</div>
					</div>
				<% }); %>
			</div>
		<% } %>
		
